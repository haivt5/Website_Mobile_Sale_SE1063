                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        @*<li>
                            <a href="index.html"><i class="fa fa-dashboard fa-fw"></i> Admin Homepage </a>
                        </li>*@
                        <li>
                            <a href="#"><i class="fa fa-files-o fa-fw"></i> Manage Phone <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("AdminPhoneList","Admin")"><i class="fa fa-mobile-phone"></i> Phone List </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("AdminAddNewPhone","Admin")"><i class="fa fa-mobile-phone"></i> Add New Phone </a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-files-o fa-fw"></i> Category <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="blank.html"> Add Category </a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-files-o fa-fw"></i> Color <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="blank.html"> Add Color </a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Home")"><i class="fa fa-edit fa-fw"></i> Go to Shop </a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
