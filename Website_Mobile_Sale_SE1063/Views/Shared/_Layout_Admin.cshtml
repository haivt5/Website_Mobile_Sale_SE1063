    <script src="~/Scripts/admin.jquery.min.js"></script>
    <script src="~/Scripts/admin.bootstrap.min.js"></script>
    <script src="~/Scripts/admin.metisMenu.min.js"></script>
    <script src="~/Scripts/admin.jquery.dataTables.min.js"></script>
    <script src="~/Scripts/admin.dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/admin.dataTables.responsive.js"></script>
    <script src="~/Scripts/admin.sb-admin-2.js"></script>
    <script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
