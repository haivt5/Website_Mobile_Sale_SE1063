@using Website_Mobile_Sale_SE1063.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutWithoutCategory.cshtml";
}



    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="login-form">
                        <!--login form-->
                        <h2>Login to your account</h2>
                        @using (Html.BeginForm("LoginWithoutModel", "Account", FormMethod.Post)) {
                            <input type="email" name="Email" placeholder="Email Address" required />
                            <input type="password" name="Password" placeholder="Password" required />
                            <span>
                                <input type="checkbox" id="cbxRememberMe" class="checkbox">
                                Keep me signed in
                                <input type="hidden" name="RememberMe" id="RememberMe"/>
                                <input type="hidden" name="returnUrl" value="" />
                            </span>
                            <button type="submit" class="btn btn-default">Login</button>
                        }
                    </div><!--/login form-->
                </div>
                <div class="col-sm-1">
                    <h2 class="or">OR</h2>
                </div>
                <div class="col-sm-4">
                    <div class="signup-form">
                        <!--sign up form-->
                        <h2>New User Signup!</h2>
                        <form action="@Url.Action("RegisterWithoutModel", "Account")" method="post">
                            @*<input type="text" placeholder="Name" />*@
                            <input type="email" placeholder="Email Address" name="Email" />
                            <input type="password" placeholder="Password" name="Password"/>
                            <input type="password" placeholder="Confirm password" name="PasswordConfirm" />
                            <button type="submit" class="btn btn-default">Signup</button>
                        </form>
                    </div><!--/sign up form-->
                </div>
            </div>
        </div>
    </section><!--/form-->








