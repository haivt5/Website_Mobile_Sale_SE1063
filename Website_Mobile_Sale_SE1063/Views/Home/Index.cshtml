<script>

    var cart;

    $(document).ready(function () {
        loadHot();
        cart = new Cart();
        cart.Initialize();

        $('a[href="#tab-new"]').click(loadNew);
        $('button[id="btnPriceFilter"]').click(priceFilter);
    });

    function loadHot() {
        $.ajax({
            url: '@Url.Action("GetHotPhones", "Phone")',
            type: 'POST',
            success: function (result) {
                var s = "";
                for (var i = 0; i < result.length; i++) {
                    s += '<div class="col-sm-3"> ' +
                            '    <div class="product-image-wrapper">' +
                            '       <a href="@Url.Action("PhoneDetail", "Phone")?id=' + result[i].Phone.Id + '">' +
                            '        <div class="single-products">' +
                            '            <div class="productinfo text-center">' +
                            '                <img src="' + result[i].Phone.Image + '" alt="" height="200px"/>' +
                            '                <h2>' + toMoney(result[i].Phone.Price) + '</h2>' +
                            '                <p>' + result[i].Phone.Name + '</p>' +
                            '                <a href="#" class="btn btn-default add-to-cart" id="btn-add-to-cart" data-phone-id="' + result[i].Phone.Id + '"><i class="fa fa-shopping-cart"></i>Add to cart</a>' +
                            '            </div>' +
                            '        </div>' +
                            '       </a>' +
                            '    </div>' +
                            '</div>';
                }
                $('#tab-hot').html(s);
            }
        }).done(function () {
            $('a[id="btn-add-to-cart"]').each(function () {
                $(this).click(function () {
                    onBtnAddClick($(this));
                });
            });
        });
    }

    function loadNew() {
        $.ajax({
            url: '@Url.Action("GetNewPhones", "Phone")',
            type: 'POST',
            success: function (result) {
                var s = "";
                for (var i = 0; i < result.length; i++) {
                    s += '<div class="col-sm-3"> ' +
                            '    <div class="product-image-wrapper">' +
                            '       <a href="@Url.Action("PhoneDetail", "Phone")?id=' + result[i].Id + '">' +
                            '        <div class="single-products">' +
                            '            <div class="productinfo text-center">' +
                            '                <img src="' + result[i].Image + '" alt="" height="200px"/>' +
                            '                <h2>' + toMoney(result[i].Price) + '</h2>' +
                            '                <p>' + result[i].Name + '</p>' +
                            '                <a href="#" class="btn btn-default add-to-cart" id="btn-add-to-cart" data-phone-id="' + result[i].Id + '"><i class="fa fa-shopping-cart"></i>Add to cart</a>' +
                            '            </div>' +
                            '        </div>' +
                            '       </a>' +
                            '    </div>' +
                            '</div>';
                }
                $('#tab-new').html(s);
            }
        }).done(function () {
            $('a[id="btn-add-to-cart"]').each(function () {
                $(this).click(function () {
                    onBtnAddClick($(this));
                });
            });
        });
    }

    function onBtnAddClick(element) {
        var phoneId = element.attr('data-phone-id');

        cart.Add(phoneId);
    }

    



</script>