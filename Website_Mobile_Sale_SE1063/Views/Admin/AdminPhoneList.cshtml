@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<Website_Mobile_Sale_SE1063.Models.Entities.Phone>

@{
    ViewBag.Title = "AdminPhoneList";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<secsion>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">AdminPhoneList</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Category)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Capacity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().ScreenResolution)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().RAM)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Platform)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Image)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Price)
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Capacity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ScreenResolution)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RAM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Platform)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    <div id="PhoneImage"><img src="@item.Image" witdh="100" height="150" /></div>
                                    @*@Html.DisplayFor(modelItem => item.Image)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </table>
                    <!-- /.table-responsive -->

                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                    <div class="MenuTrang">
                        @Html.PagedListPager(Model, Page => Url.Action("AdminPhoneList", new { Page = Page }))
                    </div>
                    <style>
                        .MenuTrang li {
                            display: inline;
                        }
                    </style>

                    <div>
                        <button type="submit" class="btn btn-default">Add New Phone</button>
                    </div>
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
</secsion>
